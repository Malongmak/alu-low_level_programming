#!/bin/bash

# Check if $CFILE variable is set
if [ -z "$CFILE" ]; then
  echo "Error: CFILE variable is not set."
  exit 1
fi

# Check if the C file exists
if [ ! -f "$CFILE" ]; then
  echo "Error: C file '$CFILE' not found."
  exit 1
fi

# Get the base name of the C file (without extension)
BASENAME=$(basename "$CFILE" .c)

# Generate assembly code using GCC
gcc -S -masm=intel "$CFILE" -o "${BASENAME}.s"

echo "Assembly code generated and saved as '${BASENAME}.s'."

